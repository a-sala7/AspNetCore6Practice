@model AspNetPractice.Models.Product

<div class="mt-5 product-details">
    <div class="row">
        <div class="col-sm-6">
            <img class="img-fluid" src="@Model.ImageUrl" />
        </div>
        <div class="col-sm-6">
            <div>
                <div class="d-flex justify-content-between">
                    <h3 class="product-name">@Model.Name</h3>
                    <h4 class="product-price">@Model.Price.ToString("c")</h4>
                </div>
                <p>Category: @Model.Category.Name</p>
                @if (Model.Description != null)
                {
                    <p>
                        @Model.Description
                    </p>
                }
            </div>
        </div>
    </div>
</div>